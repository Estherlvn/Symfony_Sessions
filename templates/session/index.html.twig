{% extends 'base.html.twig' %}


{% block title %}Sessions{% endblock %}


{% block body %}


<div class="d-flex justify-content-between align-items-center mb-3">

    <h1>Toutes les Sessions</h1>

    <a href="{{ path('new_session') }}" class="button-64" role="button">
        <span class="text">Ajouter une session</span>
    </a>

</div>

<div class="container mt-4">

    {% set categories = {
        'Sessions en cours': sessionsEnCours,
        'Sessions à venir': sessionsAVenir,
        'Sessions passées': sessionsPassees
    } %}

    {% for titre, sessions in categories %}
        <h2 class="mt-4">{{ titre }}</h2>
        {% if sessions is not empty %}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Intitulé</th>
                        <th>Date de début</th>
                        <th>Date de fin</th>
                        <th>Places restantes</th>
                        <th>Détails</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for session in sessions %}
                        <tr>
                            <td>{{ session.intitule }}</td>
                            <td>{{ session.dateDebut|date('d/m/Y') }}</td>
                            <td>{{ session.dateFin|date('d/m/Y') }}</td>
                            <td>{{ session.nbPlacesRestantes }}</td>
                            <td>
                                <a href="{{ path('app_session_show', {'id': session.id}) }}" class="btn btn-sm btn-outline-primary">Détails</a>
                            </td>
                            <td>

                                {# <a href="{{ path('formation_remove_session', {'session': session.id}) }}"
                                class="btn btn-outline-danger btn-sm"
                                onclick="return confirm('Voulez-vous vraiment supprimer cette session de la formation ?');">
                                 Supprimer
                             </a>
                              #}

                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="text-muted">Aucune session dans cette catégorie.</p>
        {% endif %}
    {% endfor %}
</div>





{% endblock %}



